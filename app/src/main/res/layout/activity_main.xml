<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9A8BC34A"
    android:onClick="start"
    android:paddingLeft="20dp"
    android:paddingTop="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp"
    android:tag="1"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="257dp"
        android:layout_height="191dp"
        android:layout_row="1"
        android:layout_column="1"
        android:background="#8BC34A"
        android:onClick="start"
        android:padding="20dp"
        android:text="GO"
        android:textSize="36sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="130dp" />

    <RelativeLayout

        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="16dp">

        <TextView
            android:id="@+id/score"
            android:layout_width="87dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="294dp"
            android:layout_marginRight="294dp"
            android:background="#BAFFC107"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:text="0/5"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/timer"
            android:layout_width="81dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="11dp"
            android:background="#BAFFC107"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:text="30s"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/sum"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/score"
            android:layout_alignLeft="@+id/score"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="99dp"
            android:layout_marginLeft="99dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="110dp"
            android:layout_marginRight="110dp"
            android:background="#9A8BC34A"
            android:padding="10dp"
            android:text="31+12"
            android:textSize="36sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.468"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="317dp"
            android:layout_height="240dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="33dp"
            android:layout_marginLeft="33dp"
            android:layout_marginEnd="31dp"
            android:layout_marginRight="31dp"
            android:layout_marginBottom="319dp"
            android:columnCount="2"
            android:rowCount="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.382"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sum">

            <Button
                android:id="@+id/button_3"
                android:layout_width="149dp"
                android:layout_height="119dp"
                android:layout_row="1"
                android:layout_column="1"
                android:background="#00BCD4"
                android:onClick="chooseAnswer"
                android:tag="3"
                android:text="3"
                android:textSize="36sp" />

            <Button
                android:id="@+id/button_2"
                android:layout_width="149dp"
                android:layout_height="119dp"
                android:layout_row="1"
                android:layout_column="0"
                android:background="#CDDC39"
                android:onClick="chooseAnswer"
                android:tag="2"
                android:text="3"
                android:textSize="36sp" />

            <Button
                android:id="@+id/button_0"
                android:layout_width="149dp"
                android:layout_height="119dp"
                android:layout_row="0"
                android:layout_column="0"
                android:background="#009688"
                android:onClick="chooseAnswer"
                android:tag="0"
                android:text="3"
                android:textSize="36sp" />

            <Button
                android:id="@+id/button_1"
                android:layout_width="149dp"
                android:layout_height="119dp"
                android:layout_row="0"
                android:layout_column="1"
                android:background="#FAD4F716"
                android:onClick="chooseAnswer"
                android:tag="1"
                android:text="3"
                android:textSize="36sp" />




        </GridLayout>

        <TextView
            android:id="@+id/correct"
            android:layout_width="274dp"
            android:layout_height="154dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"

            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="71dp"
            android:layout_marginLeft="71dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="36dp"
            android:layout_marginRight="36dp"
            android:layout_marginBottom="130dp"
            android:text=" Correct!"
            android:textSize="30sp"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

        <Button
            android:id="@+id/Play"
            android:layout_width="186dp"
            android:layout_height="82dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="92dp"
            android:layout_marginLeft="92dp"
            android:layout_marginEnd="103dp"
            android:layout_marginRight="103dp"
            android:layout_marginBottom="42dp"
            android:onClick="Playagain"
            android:padding="10dp"
            android:text="Play Again"
            android:textColor="#2196F3"
            android:textSize="24sp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.531"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/correct"
            app:layout_constraintVertical_bias="0.537" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>